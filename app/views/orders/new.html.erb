	<div class="container">
  	<div class="row">
  	<div class="col-md-4 ">
      <div class="well">
   
    <h1 class="text-center"><small>Order For</small><%= @food_item.name %></h3>
    </br>
    
        <%= form_for [@food_item, Order.new] do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
       

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, id: :food_item_price ,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, id: :food_item_section ,class: 'form-control' %>
  </div>

  <%= f.submit "Submit Order", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>